{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
    },
    "tasks": [{
            "label": "Create terminals",
            "dependsOn": [
                "React",
                "Sass",
                "Frontend"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "React",
            "type": "shell",
            "command": "npm start",
            "isBackground": true
        },
        {
            "label": "Sass",
            "type": "shell",
            "command": "npm run compile:sass",
            "isBackground": true
        },
        {
            "label": "Frontend",
            "type": "process",
            "command": "",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "focus": true,
                "panel": "dedicated"
            },
            "windows": {
                "command": "powershell"
            },
            "osx": {
                "command": "/bin/bash"
            },
            "isBackground": true
        },
    ]
}